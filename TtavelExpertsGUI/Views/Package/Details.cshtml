Author:Sujani Wijesundera*@

@model TravelExpertsData.Models.Package


@{
    ViewData["Title"] = "Details";
}


<div class="container travel-box">
    <h4 class="text-center">Package Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PkgName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PkgName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PkgStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PkgStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PkgEndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PkgEndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PkgDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PkgDesc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PkgBasePrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PkgBasePrice)
        </dd>
    </dl>

    <div>

        @Html.ActionLink("Buy Package", "BuyPackage", new { id = Model.PackageId }, new { @class = "btn btn-primary" })

        <a asp-action="Index" class="btn btn-primary">Back to packages</a>
    </div>
</div>